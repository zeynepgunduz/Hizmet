@model IEnumerable<DepartmantViewModel>

@{
    ViewData["Title"] = "Departman Listesi";
 }

<p>
        <a class="btn  btn-primary" asp-action="Create"><i class="fa-solid fa-plus"></i>Yeni</a>
</p>
<table  class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTopDepartmant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTopDepartmant)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.ParentName)
            </td>
            <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>  
                    <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i></a>             
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                    
            </td>
        </tr>
        
}
    </tbody>
</table>
 